<div class="container">

  <h1 class="text-center">Chat Ecommerce</h1>
  <div class="row">
    <div class="col-4">
      <h3>User: <span id="userName"></span> </h3>
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="chatbox"
          placeholder="name@example.com"
        />
        <label for="chatbox">Message</label>
      </div>
    </div>
    <div class="col-8" id="messageLogs">
      {{#each messages}}
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title">{{this.user}}</h5>
            <p class="card-text">{{this.message}}</p>
            <p class="card-text text-muted text-end">{{this.time}}</p>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/chat.js"></script>